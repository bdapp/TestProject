<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent" >

     <ImageView
        android:id="@+id/id_close_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:background="@drawable/bg_url"
        android:src="@drawable/ico_close" />
     
    <LinearLayout
        android:id="@+id/id_back_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/id_close_img"
        android:background="@drawable/bg_url"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/id_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ico_reback" />

        <TextView
            android:id="@+id/id_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:lines="1"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:textSize="16sp" />
    </LinearLayout>

   

    <ListView
        android:id="@+id/id_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_back_layout"
        android:divider="#eaeaea"
        android:dividerHeight="1dp" />
    
    <TextView android:id="@+id/id_null_text"
        android:layout_below="@id/id_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/nofile"/>

</RelativeLayout>